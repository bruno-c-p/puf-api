{
  "name": "puf-api",
  "version": "0.0.0",
  "main": "index.js",
  "author": {
    "name": "Bruno Cardozo Pereira",
    "email": "bruno.cardozo.pereira@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "./src/**/*.{js,md,json}": [
      "yarn fix"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.21.8",
    "@babel/node": "^7.20.7",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.21.5",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1"
  },
  "scripts": {
    "test": "echo \"No tests specified\"",
    "fix": "run-s \"fix:* {@}\" --",
    "fix:lint": "eslint --fix --no-error-on-unmatched-pattern",
    "fix:format": "prettier --write",
    "format": "yarn fix:format 'src/**/*.(js|ts|md|json)'",
    "lint": "yarn fix:lint src/**/*.{js,ts,md,json}",
    "prebuild": "rm -rf ./dist",
    "build": "babel src --extensions \".js\" --ignore \"*.spec.js,*.test.js\" --out-dir dist --copy-files",
    "dev": "nodemon --exec babel-node src/index.js"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.0"
  }
}
